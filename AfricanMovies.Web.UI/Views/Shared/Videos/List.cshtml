@using AfricanMovies.Backend.ViewModels
@model AfricanMovies.Backend.ViewModels.VideosListViewModel

<div class="row">
    <h3 class="pull-left text-primary col-sm-3 col-md-3 col-lg-3">Movies</h3>
    @Html.React("VideosOrder", new { 
        componentName = ViewBag.VideosOrderByComponentName, 
        currentSettings = Model.Query.OrderBy, 
        orders = new []
        {
            new { field = "ChannelInfo.Name", label = "Channel Name"},
            new { field = "PublicationDate", label = "Publication Date"},
            new { field = "Title", label = "Title"},
            new { field = "Views", label = "Most Popular"},
            new { field = "Likes", label = "Most Liked"},
        }, 
        directions = new
        {
            ascending = OrderDirectionEnum.Ascending,
            descending = OrderDirectionEnum.Descending
        } 
    })
</div>
@Html.React("VideosList", new
{
    videos = Model.Videos,
    captionLength = 190
})

@Html.React("Pagination", new
{
    componentName = ViewBag.VideosPaginationComponentName,
    currentSettings = Model.Query.Pagination,
    size = 15
})
